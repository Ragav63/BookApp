<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="140dp"
    android:layout_marginEnd="10dp"
    android:gravity="center"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- Sample CardView items, add more as needed -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <!--Card Image-->

                <ImageView
                    android:id="@+id/homecardmimg"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/book"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"/>

                <!--Card Name-->
                <TextView
                    android:id="@+id/homecardTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/homecardmimg"
                    android:layout_alignStart="@+id/homecardmimg"
                    android:layout_alignEnd="@+id/homecardmimg"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="Maths"
                    android:textColor="@color/roseora"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Add content inside the CardView -->


</androidx.cardview.widget.CardView>