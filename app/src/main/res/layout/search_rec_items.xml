<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F08080">


    <!-- Item 1 -->
    <LinearLayout
        android:id="@+id/hrcviQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:orientation="horizontal"
        android:background="@drawable/rec_corner_curveshape"
        >

        <!-- Item Image -->
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/questions512px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            >

        <!-- Item Title -->
            <TextView
                android:id="@+id/searchIQuestion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:maxLines="3"
                android:text="How to contact the Seller of the Book?"
                android:textColor="@color/roseora"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginLeft="5dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="View"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_corner_curve"
                android:id="@+id/searchviewBtn"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
